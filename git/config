[user]
    name = Alan Canniff
    email = alan.canniff@virscient.com

[merge]
    tool = vimdiff

[mergetool]
    keepBackup = false

[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
	unstage = reset HEAD --
	hist = log --oneline --graph
